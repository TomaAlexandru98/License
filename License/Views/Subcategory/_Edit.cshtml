@model License.Service.Logic.ViewModels.Subcategories.CreateSubcategoryViewModel

<div class="modal-body">
    <div class="form-group form-group-dimension">
        <label>Category</label>
        <input readonly asp-for="CategoryName" class="form-control" />
        <span asp-validation-for="CategoryName" class="text-danger"></span>
    </div>

    <div class="form-group form-group-dimension">
        <label>Subcategory</label>
        <input asp-for="SubcategoryName" class="form-control" />
        <span asp-validation-for="SubcategoryName" class="text-danger"></span>
    </div>
    <div class="form-group form-group-dimension">
        <label>Description</label>
        <input asp-for="SubcategoryDescription" class="form-control" />
        <span asp-validation-for="SubcategoryDescription" class="text-danger"></span>
    </div>
</div>

<input hidden asp-for="CategoryId" />
<input hidden asp-for="SubcategoryId" />
<div class="modal-footer">
    <button type="submit" class="btn btn-primary" style="color: white; background: #112147; padding: 0.5rem 1rem; cursor: pointer;">Save</button>
</div>