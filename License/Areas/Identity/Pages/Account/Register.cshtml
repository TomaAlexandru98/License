@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}


<div style="padding-top: 4rem;">
    <form method="post">
        <div style="display: flex; flex-direction: column; flex: 1; align-items: center; justify-content: center; height: 75vh;">
            <div style="display: flex;">
                <div class="form-group" id="Container-FirstName">
                    <label asp-for="Input.FirstName"></label>
                    <input asp-for="Input.FirstName" class="form-control" style="width: 17vw; margin-right: 1vw;" id="FirstName" onfocusout='ValidateProperty("FirstName")' />
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                </div>
                <div class="form-group" id="Container-LastName">
                    <label asp-for="Input.LastName"></label>
                    <input asp-for="Input.LastName" class="form-control" style="width: 17vw;" id="LastName" onfocusout='ValidateProperty("LastName")' />
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group" id="Container-Email">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" style="width: 35vw;" id="Email" onfocusout='ValidateProperty("Email")' />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div style="display: flex;">
                <div class="form-group" id="Container-Password">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" style="width: 17vw; margin-right: 1vw;" id="Password" onfocusout='ValidateProperty("Password")' />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group" id="Container-ConfirmPassword">
                    <label asp-for="Input.ConfirmPassword"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" style="width: 17vw;" id="ConfirmPassword" onfocusout='ValidateProperty("ConfirmPassword")' />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group" id="Container-PhoneNo">
                <label asp-for="Input.PhoneNo"></label>
                <input asp-for="Input.PhoneNo" class="form-control" style="width: 35vw;" id="PhoneNo" onfocusout='ValidateProperty("PhoneNo")' />
                <span asp-validation-for="Input.PhoneNo" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary" style="color: white !important; background: #112147 !important; padding: 0.5rem 1rem !important;" onclick="ValidateRegister()">Register</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
